{
  "name": "nw-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve --port=8964\" \"wait-on http://localhost:8964 && nw .\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build": "npm run build:clean && npm run build:ng && npm run build:nw",
    "build:clean": "rimraf ./dist-ng ./dist",
    "build:ng": "ng build --prod --base-href /dist-ng/ --output-path ./dist-ng",
    "build:nw": "build --concurrent --tasks win-x86,mac-x64 --mirror https://dl.nwjs.io/ .",
    "build:win": "npm run build:ng && build --tasks win-x86 --mirror https://dl.nwjs.io/ ."
  },
  "chromium-args": "--enable-transparent-visuals --disable-gpu --disable-gpu-compositing --force-cpu-draw",
  "main": "http://localhost:8964",
  "node-remote": "http://localhost:8964",
  "window": {
    "width": 200,
    "height": 200,
    "always_on_top": false,
    "frame": false,
    "transparent": true,
    "kiosk": false,
    "fullscreen": false,
    "show": true,
    "position": "center",
    "resizable": false
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.8",
    "@angular/common": "~8.2.8",
    "@angular/compiler": "~8.2.8",
    "@angular/core": "~8.2.8",
    "@angular/forms": "~8.2.8",
    "@angular/platform-browser": "~8.2.8",
    "@angular/platform-browser-dynamic": "~8.2.8",
    "@angular/router": "~8.2.8",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1",
    "puppeteer": "1.20.0"
  },
  "devDependencies": {
    "@types/node": "~8.9.4",
    "@angular-devkit/build-angular": "~0.803.6",
    "@angular/cli": "~8.3.6",
    "@angular/compiler-cli": "~8.2.8",
    "@angular/language-service": "~8.2.8",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "^5.0.0",
    "concurrently": "^4.1.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "nw": "^0.41.2-sdk",
    "nwjs-builder-phoenix": "^1.15.0",
    "nwjs-types": "^1.0.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "wait-on": "^3.3.0",
    "@types/puppeteer": "1.20.0",
    "ws": "7.1.2"
  },
  "build": {
    "nwVersion": "v0.41.2",
    "nwFlavor": "normal",
    "targets": [
      "zip",
      "nsis7z"
    ],
    "files": [
      "**/*"
    ],
    "excludes": [
      "e2e/**/*",
      "src/**/*",
      ".editorconfig",
      ".gitignore",
      "angular.json",
      "browserslist",
      "karma.conf.js",
      "package-lock.json",
      "screenshot.png",
      "tsconfig.app.json",
      "tsconfig.json",
      "tsconfig.spec.json",
      "tslint.json"
    ],
    "strippedProperties": [
      "chromium-args",
      "scripts",
      "devDependencies",
      "build"
    ],
    "overriddenProperties": {
      "main": "dist-ng/index.html"
    },
    "win": {
      "icon": "assets/icon-256.ico"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "icon": "assets/icon-256.ico",
      "unIcon": "assets/icon.ico",
      "languages": [
        "English"
      ],
      "diffUpdaters": false,
      "hashCalculation": true
    }
  }
}
